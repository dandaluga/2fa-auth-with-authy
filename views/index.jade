extends layout

block content
  h1= title
  p Welcome to #{title}

  a(href="/register") Register
  br
  a(href="/sms") Send Text Message
  br
  a(href="/verify") Verify
  br
  a(href="/delete") Delete
  br
  if (user)
    p User Data:
      br
      | User: #{user.id}
      br
      | Message: #{user.message}
      br
      | Status: #{user.success}

