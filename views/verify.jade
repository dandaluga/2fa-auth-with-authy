extends layout

block content
  h1= title
  p Welcome to #{title}

    form(action='/verify', method='post')
        br
        input(type="text", placeholder="uid", name="uid", value="Authy UID Here")
        br
        input(type="text", placeholder="token", name="token", value="")
        br
        input(type="submit", value="submit")

  if (verify)
    p Verify Data:
        br
        | Cellphone: #{verify.cellphone}
        br
        | Message: #{verify.message}
        br
        | Status: #{verify.success}
